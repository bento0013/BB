<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/custom/core" prefix="c"?>
<?init class="org.zkoss.zk.ui.util.Composition" arg0="/WEB-INF/layouts/default/main/template.zul"?>
<?page id="page" title="${c:l('default.page.global.label.app.title')} ${c:l('security.systemsetting.page.label.systemsetting')}" ?>
<?link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico"?>
<?link rel="icon" type="image/x-icon" href="/images/favicon.ico"?>
<zk xmlns="http://www.zkoss.org/2005/zul">
   <panel self="@{define(content)}" hflex="1" vflex="1" style="padding:0px;margin:0px" apply="com.bsd.cse.zk.ctrl.backoffice.material.semi.SemiMaterialTypeController">
       <panelchildren hflex="1">
            <panel hflex="1">
                <panelchildren hflex="1" sclass="background_title_content">
                    <hbox height="30px" hflex="1" sclass="title_content"  align="center" pack="left">
                        <label style="font-weight:bold;padding-top:10px;padding-left:5px" value="${c:l('backoffice.semimaterialtype.page.label.semimaterial')}"></label>
                    </hbox>
                </panelchildren>
            </panel>
            <panel  vflex="1">
                <panelchildren  vflex="1">
                    <vbox vflex="1" hflex="1" spacing="0">
                        <hbox align="center" height="30px">
                            <label value="${c:l('backoffice.semimaterialtype.page.label.name')}"></label><textbox id="typeSearchNameTxt"></textbox><toolbarbutton id="searchBtn" image="/images/backoffice/search.png" tooltiptext="${c:l('backoffice.semimaterialtype.page.btn.search')}"></toolbarbutton><toolbarbutton id="newBtn" image="/images/backoffice/add.png" tooltiptext="${c:l('backoffice.semimaterialtype.page.btn.new')}"></toolbarbutton>
                        </hbox>

                        <listbox vflex="1" id="contentListbox" sizedByContent="true">
                            <listhead>
                                <!--listheader style="min-width:100px" label="${c:l('backoffice.semimaterialtype.page.label.id')}" ></listheader-->
                                <listheader id="nameClm" style="min-width:100px" label="${c:l('backoffice.semimaterialtype.page.label.name')}"></listheader>
                                <listheader id="descClm" style="min-width:100px" label="${c:l('backoffice.semimaterialtype.page.label.description')}"></listheader>
                                <listheader style="min-width:100px" align="center" label="${c:l('backoffice.semimaterialtype.page.label.action')}"></listheader>
                            </listhead>                           
                        </listbox>
                        <paging id="paging"></paging>
                    </vbox>
                </panelchildren>
            </panel>
            <window border="normal" visible="false" width="350px"  title="${c:l('backoffice.semimaterialtype.page.label.add-edit-semimaterial')}" id="editWin" >
               <panel hflex="1">
                   <panelchildren  hflex="1">
                       <vbox  hflex="1" style="padding-left:20px,padding-right:20px;padding-top:10px;padding-bottom:10px">
                           <hbox hflex="1" widths="150px,,10px" align="center" style="padding-left:10px;padding-right:10px" visible="false"><label value="${c:l('backoffice.semimaterialtype.page.label.id')}"></label><textbox id="idTxt" hflex="1" readonly="true"></textbox><label sclass="font_bold_red">*</label></hbox>
                           <hbox hflex="1" widths="150px,,10px" align="center" style="padding-left:10px;padding-right:10px"><label value="${c:l('backoffice.semimaterialtype.page.label.name')}"></label><textbox id="nameTxt" hflex="1"  maxlength="100"></textbox><label sclass="font_bold_red">*</label></hbox>
                           <hbox hflex="1" widths="150px,,10px" align="center" style="padding-left:10px;padding-right:10px"><label value="${c:l('backoffice.semimaterialtype.page.label.description')}"></label><textbox id="descTxt" hflex="1"  maxlength="100"></textbox><label sclass="font_bold_red"></label></hbox>
                           <hbox hflex="1" align="center" pack="center"><button id="saveBtn" width="60px" mold="trendy" label="${c:l('backoffice.semimaterialtype.page.btn.save')}"></button><button id="cancelBtn" width="60px" mold="trendy" label="${c:l('backoffice.semimaterialtype.page.page.btn.cancel')}"></button></hbox>
                       </vbox>
                   </panelchildren>
               </panel>
           </window>
      </panelchildren>
   </panel>
   
</zk>
